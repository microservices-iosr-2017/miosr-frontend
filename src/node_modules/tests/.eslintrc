{
  "extends": "../.eslintrc",
  "env": {
    "browser": false,
    "node": true,
    "mocha": true
  },
  "globals": {
    "chai": true,
    "expect": true, /* for chai */
    "sinon": true,
    "def": true,
    "subject": true,
    "get": true,
    "FactoryGirl": true,
    "sharedExamplesFor": true,
    "includeSharedExamplesFor": true,
    "itBehavesLike": true
  },
  "rules": {
    "no-unused-expressions": "off" /* for chai's to.be.true */
  }
}
